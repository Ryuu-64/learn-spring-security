<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ryuu.learn.springsecurity.mapper.UserMapper">
    <insert id="insert">
        INSERT INTO users (username, password)
        VALUES (#{username}, #{password});
    </insert>
    <select id="selectAll" resultType="org.ryuu.learn.springsecurity.dto.User">
        SELECT *
        FROM users;
    </select>
    <select id="selectByUsername" resultType="org.ryuu.learn.springsecurity.dto.User">
        SELECT *
        FROM users
        WHERE username = #{username};
    </select>
    <delete id="deleteByUsername">
        DELETE
        FROM users
        WHERE username = #{username};
    </delete>
</mapper>